{
  "name": "excited-contracts",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:exciteddao/excited-contracts.git"
  },
  "dependencies": {
    "@defi.org/web3-candies": "4.x",
    "hardhat-watcher": "^2.5.0",
    "solidity-coverage": "^0.8.4"
  },
  "scripts": {
    "prettier": "prettier --write '{contracts,src,test}/**/*.{ts,js,json,sol}'",
