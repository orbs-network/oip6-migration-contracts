    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "husky": "^8.0.3",
    "prettier": "2.8.8",
    "pretty-quick": "^3.1.3",
    "sinon": "^15.2.0",
    "solhint": "^3.6.2",
    "typescript": "^5.2.2"
  }
